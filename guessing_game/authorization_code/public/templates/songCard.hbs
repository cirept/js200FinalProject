          <li class="choice1" data-song="{{name}}" data-artist="{{artist}}">
            <span>{{artist}}</span>&nbsp; - &nbsp;<span>{{name}}</span>
          </li>
          <li class="choice2" data-song="{{name}}" data-artist="{{artist}}">
